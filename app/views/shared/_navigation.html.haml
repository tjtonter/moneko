%nav.navbar.navbar-inverse.navbar-fixed-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{type: "button", "data-toggle" => "collapse", "data-target" => "#main-nav" }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'MONEKO', root_path, class: 'navbar-brand'
    .collapse.navbar-collapse#main-nav
      - if current_user
        %ul.nav.navbar-nav#user-nav{data: {"user-id" => current_user.id}}
          %li= link_to "Tarjoukset" ,offers_path if current_user.is?("admin")
          %li= link_to "Työmääräykset", orders_path if current_user.is?("admin")
          %li= link_to "Tapahtumat", occurrences_path if current_user.is?("admin")
          %li= link_to "Käyttäjät", users_path if current_user.is?("admin")
        - if current_user
          %ul.nav.navbar-nav.navbar-right
            %li.dropdown
              = link_to current_user, class: "dropdown-toggle", data: {toggle: "dropdown"}  do
                = current_user.name
                %b.caret
                %ul.dropdown-menu
                  %li= link_to "Oma sivu", user_path(current_user)
                  %li= link_to "Kalenteri", user_tasks_path(current_user)
                  %li= link_to "Työrekisteri", user_jobs_path(current_user)
                  %li= link_to "Muokkaa", edit_user_path(current_user)
                  %li= link_to "Kirjaudu ulos", destroy_user_session_path, method: :delete
