%tr{class: "#{status_to_class(job.order.status)}"}
  %td
    %strong
      = job.order.number
    = job.order.title
  %td= link_to job.description, order_path(job.order)
  %td= job.date.nil? ? "" : (l job.date, :format => :long)
  %td= number_to_currency job.salary, :unit => "€"
  %td= job.duration
  %td= link_to "Poista", user_job_path(@user, job), :method => :delete, 
    data: { confirm:  "Haluatko varmasti poistaa työn?" }, :class => "btn btn-xs btn-danger"
  %td= link_to "Muokkaa", edit_user_job_path(@user, job)
