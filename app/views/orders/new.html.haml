= form_for [@offer, @offer.orders.build] do |f|
  %fieldset
    %legend Uusi työmääräys
    - if @offer.errors.any?
      - @offer.errors.full_messages do |msg|
        %li= msg
    = f.label :title
    = f.text_field :title, :class => "input-xxlarge",  :value => @offer.target
    %br
    = f.label :description
    = f.text_area :description, :class => "input-xxlarge", :rows => 20, :value => strip_tags(@offer.charge)
    %br
    = f.button
