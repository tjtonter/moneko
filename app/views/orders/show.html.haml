%div{class: "panel panel-#{status_to_class(@order.status)}"}
  .panel-heading
    %h3
      = @order.id
      \: #{@order.title}
  .panel-body
    .well
      = @order.description
    .well
      Tila:
      = I18n.t @order.status
    .row
      - @order.users.each do |user|
        .span3
          .thumbnail
            = image_tag "200x200.gif", :alt => "Kuva"
            .caption
              %h4= user.name
    .well
      %b
        #{l @order.begin_at, :format => :long} -- 
        #{@order.end_at.nil? ? "" : (l @order.end_at, :format => :long)}
  .panel-footer
    .btn-group
      = link_to "Poista", @order, :class => "btn btn-danger", method: :delete
      = link_to "Muokkaa", edit_order_path(@order), :class => "btn btn-primary"

