%table.table
  %thead
    %tr
      %th= "Työnumero" 
      %th= "Kuvaus"
      %th= "Päivämäärä"
      %th= "Palkka"
      %th= "Kesto"
      %th Toiminnot 
  %tbody
    - if @orders
      - @orders.each do |o|
        %tr
          %td= o.id
          %td= link_to o.title, o
          %td= o.begin_at
          %td= o.end_at
          %td= o.duration.to_s
          %td= link_to "Poista", o, method: :delete
