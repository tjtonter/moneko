= form_for @order do |f|
  %fieldset.span6
    %legend Työmääräys
    = render 'shared/form_errors', object: @order
    .form-group
      = f.label :title
      = f.text_field :title, :class => "form-control" 
      %p.help-block#title_errors
    .form-group
      = f.label :description
      = f.text_area :description, :class => "form-control", :rows => 5 
      %p.help-block#description_errors
    .form-group
      = f.label :begin_at
      = f.text_field :begin_at, :class => "form-control",
        :value => @order.begin_at.nil? ? "" : (l @order.begin_at, format: :short)
      %p.help-block#begin_at_errors
    .form-group
      = f.label :end_at
      = f.text_field :end_at, :class => "form-control", 
        :value => @order.end_at.nil? ? "" : (l @order.end_at, format: :short)
      %p.help-block#end_at__errors
    .form-group
      = f.label :status
      = f.select :status, Order::STATUSES.map { |s| [I18n.t(s), s] }
    %br
    %strong Työn suorittajat
    %br
    - @users.each do |u|
      .checkbox
        = check_box_tag "order[user_ids][]", u.id, @order.users.include?(u)
        = u.name
    .form-group
      = f.label :salary
      = f.text_field :salary, :class => "form-control"
      %p.help-block#salary_errors
    .form-actions
      = f.submit :class => "btn btn-primary"
