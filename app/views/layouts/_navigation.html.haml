= nav_bar :fixed => :top, :brand => "Moneko" do
  = menu_group do
    = menu_item "Tarjoukset", offers_path
    = menu_item "Työmääräykset", orders_path
    = menu_item "Käyttäjät", users_path
  = menu_group :pull => :right do
    - if current_user
      = drop_down current_user.name do
        = menu_item "Kalenteri", user_path(current_user)
        = menu_item "Tuntikirjanpito", user_jobs_path(current_user)
        = menu_item "Muokkaa tietojasi", edit_user_path(current_user)
        = menu_item "Kirjaudu ulos", destroy_user_session_path, :method => :delete
    - else
      = menu_item "Kirjaudu", new_user_session_path
