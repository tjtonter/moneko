= form_for @user, html: {class: "form-horizontal"} do |f|
  = render 'shared/form_errors', object: @user
  .form-group
    = f.label :name, class: "col-sm-2"
    .col-sm-5
      = f.text_field :name
  .form-group
    = f.label :username, class: "col-sm-2"
    .col-sm-5
      = f.text_field :username
  .form-group
    = f.label :gcal, class: "col-sm-2"
    .col-sm-5
      = f.text_field :gcal
  .form-group
    = f.label :email, class: "col-sm-2"
    .col-sm-5
      = f.email_field :email
  .form-group
    = f.label :password, class: "col-sm-2"
    .col-sm-5
      = f.password_field :password
  .form-group
    = f.label :password_confirmation, class: "col-sm-2"
    .col-sm-5
      = f.password_field :password_confirmation
  .form-group
    - User::ROLES.each do |r|
      .col-sm-offset-2.col-sm-5
        .radio
          %label
            = radio_button_tag "user[roles][#{r}]", r, @user.roles.include?(r), {:name => "user[roles][]" }
            = I18n.t r
  .form-group
    .col-sm-offset-2.col-sm-5
      = f.submit class: "btn btn-default"
