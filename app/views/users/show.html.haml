%h3= @user.name
%img{"class" => "img-rounded"}


#user_jobs
  = render 'jobs/table'

%h4 Sinun työmääräyksesi
%table.table
  %tr
    %th Työnumero
    %th Työ
    %th Alkamispäivä
    %th Loppumispäivä
    %th Toiminnot
  - @user.orders.each do |order|
    %tr
      %td
        %span{:class => "label label-#{status_to_class(order.status)}"}= order.id
      %td= order.title
      %td= l order.begin_at, :format => :long
      %td= l order.end_at, :format => :long
      %td= link_to "Lisää", new_user_job_path(@user, order_id: order.id), :remote => :true,
        :class => "btn btn-mini btn-primary add-job", data: {"toggle" => "modal", "target" => "#jobmodal"}

= render 'shared/modal'
