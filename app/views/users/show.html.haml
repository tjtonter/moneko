.container
  .row
    .col-xs-12.col-sm-6
      .panel.panel-primary
        .panel-heading
          %h4= t :orders
        .list-group
          - @orders.each do |order|
            = link_to order_path(order), 
              class: "list-group-item list-group-item-info" do
              %span.badge= order.jobs.count
              = order.title
              = number_to_currency order.salary
    .col-xs-12.col-sm-6
      .panel.panel-primary
        .panel-heading
          %h4= t :jobs
        .list-group
          - @jobs.each do |job|
            .list-group-item.list-group-item-info
              = l job.date, format: :short
              = job.order.title
              = job.description
              = number_to_currency job.salary
