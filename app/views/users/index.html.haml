%h2 Kaikki käyttäjät
%table.table
  %tr
    %th Käyttäjätunnus
    %th Nimi
    %th Sähköpostiosoite
    %th Tuntilappu
  - @users.each do |user|
    %tr
      %td= user.username
      %td= user.name
      %td= user.email
      %td
        = link_to "Edellinen", user_jobs_path(user, :pdf,
          :date => {:year => @past.year, :month => @past.month}, 
          :part => @past.day.between?(1, 15) ? "1..15" : "16..-1"),
          :class => "btn btn-info btn-sm"
        = link_to "Nykyinen", user_jobs_path(user, :pdf,
          :date => {:year => @today.year, :month => @today.month}, 
          :part => @today.day.between?(1, 15) ? "1..15" : "16..-1"),
          :class => "btn btn-info btn-sm"
= link_to "Uusi käyttäjä", new_user_registration_path
